%ul.sub-nav{role: "navigation"}
  %li= link_to "‚Üê All posts", posts_path

%h1.page-header Rubycorns Blog
.action-buttons
  - if current_person.admin?
    = link_to 'Edit', edit_post_path(@post), class: 'btn btn-pink'
    = link_to 'Delete', @post, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-grey'
= render partial: 'post', object: @post
.post-browsing
  - if @post.newer_post
    %p.post-newer
      = link_to "< More recent post", post_path(@post.newer_post)
  - if @post.older_post
    %p.post-older
      = link_to "Older post >", post_path(@post.older_post)
