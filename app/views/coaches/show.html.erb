<div class="container">
	<div class="row">
		<article class="col-md-12">
			<h3><%= @coach.full_name %></h3>
			<p>Coach for <%= link_to @coach.group.name, group_path(@coach.group) if @coach.group %>.</p>
			<%= image_tag(@coach.picture_url) if @coach.picture.present? %>
			<p><%= link_to '@'+ @student.twitter, 'http://twitter.com/'+ @student.twitter, html_options = {:target => '_blank'} %></p>
		</article>
	</div>
	<div class="row-fluid">
		<div class="col-md-12">
			<ul>
				<li>
					<%= link_to edit_coach_path(@coach.id) do %>
						<i class="glyphicon glyphicon-edit"></i> edit information
					<% end %>
				</li>
				<li>
					<%= link_to coaches_path do %>
						<i class="glyphicon glyphicon-arrow-left"></i> back to coaches
					<% end %>
				</li>
			</ul>
		</div>
	</div>
</div>
